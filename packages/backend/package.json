{
  "name": "@thadingyut/backend",
  "version": "1.0.0",
  "description": "Backend API for Thadingyut Festival Pocket Money Platform",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "lambda:build": "tsc && cp package*.json dist/",
    "lambda:deploy": "npm run lambda:build && serverless deploy",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "thadingyut",
    "pocket-money",
    "festival",
    "myanmar",
    "backend",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@vendia/serverless-express": "^4.12.6",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "debug": "^4.4.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "qs": "^6.14.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.153",
    "@types/aws-sdk": "^0.0.42",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.6.2",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.25.10",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
